<html>

  <head>

    <style>

        /* set the size of the person */

        #person {

          width: 50px;

          height: 100px;

          background-image: url('person-walk.png');

          background-repeat: no-repeat;

          position: absolute;

        }

    </style>

  </head>

  <body>

    <div id="person"></div>

    <script>

      const person = document.getElementById('person');

      let position = 0;

      function walk() {

        /* update the person's position */

        position += 10;

        person.style.left = position + 'px';

      

        /* change the background image */

        if (person.style.backgroundPosition === '-50px 0px') {

          person.style.backgroundPosition = '0px 0px';

        } else {

          person.style.backgroundPosition = '-50px 0px';

        }

      }

      /* set the interval for the animation */

      setInterval(walk, 100);

    </script>

  </body>

</html>
